{
  "manifest_version": 3,
  "name": "Override Styles",
  "short_name": "Override Styles",
  "version": "0.1.0",
  "description": "Override styles on specific websites",
  "author": "pHo9UBenaA",
  "web_accessible_resources": [
    {
      "resources": ["/styles/github.css"],
      "matches": ["*://*.github.com/*"]
    },
    {
      "resources": ["/styles/youtube.css"],
      "matches": ["*://*.youtube.com/*"]
    },
    {
      "resources": ["/styles/twitch.css"],
      "matches": ["*://*.twitch.tv/*"]
    },
    {
      "resources": ["/styles/teamspirit.css"],
      "matches": [
        "*://*.lightning.force.com/*",
        "*://*.visualforce.com/*",
        "*://*.force.com/*"
      ]
    }
  ],
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "css": ["styles/github.css"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles/youtube.css"]
    },
    {
      "matches": ["*://*.twitch.tv/*"],
      "css": ["styles/twitch.css"]
    },
    {
      "matches": [
        "*://*.lightning.force.com/*",
        "*://*.visualforce.com/*",
        "*://*.force.com/*"
      ],
      "css": ["styles/teamspirit.css"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    },
    {
      "matches": ["https://chatgpt.com/codex/*"],
      "js": ["js/chatgpt-codex.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.slack.com/archives/*"],
      "js": ["js/slack.js"],
      "run_at": "document_idle"
    }
  ]
}
